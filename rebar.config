
%% Where to put any downloaded depandencies. Default is 'deps'
{deps_dir, ["deps"]}.

{deps, [
       {lager, ".*", {git, "git://github.com/basho/lager.git", "master"}},
       {cowboy, ".*", {git, "git://github.com/extend/cowboy.git", "master"}}
]}.

{erl_opts, [
			{parse_transform, lager_transform},
            debug_info,
            fail_on_warning,
            bin_opt_info,
            warn_unused_vars,
            warn_shadow_vars,
            warn_unused_import
           ]}.

{port_specs, [{"priv/nodelua.so", ["c_src/*.c"]}]}.

{port_env, [
    {"DRV_LDFLAGS", "$DRV_LDFLAGS -llua"},
    {"DRV_CFLAGS", "-Wall -Wextra $DRV_CFLAGS"}
]}.

{cover_enabled, true}.
%{eunit_opts, [verbose, {report, {eunit_surefire, [{dir, "."}]}}]}.
{eunit_opts, [{report, {eunit_surefire, [{dir, "."}]}}]}.
